---
import { url } from "../utils/urls";

interface Props {
    image: string;
    imageAlt: string;
    textAlign?: "left" | "center";
}

const { image, imageAlt, textAlign = "left" } = Astro.props;

const alignmentClasses =
    textAlign === "center" ? "text-center" : "text-center md:text-left";

const paragraphAlignment =
    textAlign === "center" ? "mx-auto" : "mx-auto md:mx-0";

const actionsAlignment =
    textAlign === "center"
        ? "justify-center"
        : "justify-center md:justify-start";
---

<section class="relative bg-slate-900 text-white overflow-hidden">
    <div class="absolute inset-0 z-0">
        <img
            src={url(image)}
            alt={imageAlt}
            class="w-full h-full object-cover opacity-60"
        />
        <div
            class="absolute inset-0 bg-gradient-to-t from-slate-900/60 via-transparent to-transparent"
        >
        </div>
    </div>

    <div
        class={`container mx-auto px-4 py-32 md:py-48 relative z-10 ${alignmentClasses}`}
    >
        <h1 class="text-4xl md:text-6xl font-extrabold mb-6 leading-tight">
            <slot name="title" />
        </h1>
        <p
            class={`text-xl md:text-2xl text-slate-50 max-w-2xl mb-8 ${paragraphAlignment}`}
        >
            <slot name="subtitle" />
        </p>
        <div class={`flex flex-wrap gap-4 ${actionsAlignment}`}>
            <slot name="actions" />
        </div>
    </div>
</section>
