---
interface Props {
    query?: string;
    className?: string;
}

const {
    query = "Drnovice 447, 679 76 Drnovice, Czechia",
    className = "h-[500px]",
} = Astro.props;

const mapUrl = `https://maps.google.com/maps?q=${encodeURIComponent(query)}&t=&z=15&ie=UTF8&iwloc=&output=embed`;
---

<div class={`w-full bg-slate-200 overflow-hidden ${className}`}>
    <iframe
        width="100%"
        height="100%"
        id="gmap_canvas"
        src={mapUrl}
        frameborder="0"
        scrolling="no"
        marginheight="0"
        marginwidth="0"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        class="w-full h-full"></iframe>
</div>
