---
import Nav from '../components/Nav.astro';
import '../styles/global.css';

interface Props {
	title?: string;
}

const { title = 'Jan Musil - Služby' } = Astro.props;
---

<!doctype html>
<html lang="cs">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen flex flex-col bg-slate-50">
		<header>
			<Nav />
		</header>
		
		<main class="flex-grow container mx-auto p-4 py-8">
			<slot />
		</main>

		<footer class="bg-slate-900 text-slate-400 py-8 mt-auto">
			<div class="container mx-auto px-4 text-center">
				<p>&copy; {new Date().getFullYear()} Jan Musil. Všechna práva vyhrazena.</p>
				<p class="text-sm mt-2">Placeholder pro patičku webu.</p>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	/* Základní styly pokud jsou potřeba */
</style>
