---
import BaseLayout from "../layouts/BaseLayout.astro";
import { CONTACT_INFO } from "../constants/contact";
import { url } from "../utils/urls";
import Map from "../components/Map.astro";

const contactMethods = [
    {
        name: "Telefon",
        value: CONTACT_INFO.phone,
        href: `tel:${CONTACT_INFO.phonePlain}`,
        icon: "M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z",
        desc: "K dispozici po-pá 7:00 - 17:00",
    },
    {
        name: "E-mail",
        value: CONTACT_INFO.email,
        href: `mailto:${CONTACT_INFO.email}`,
        icon: "M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z",
        desc: "Odpovídáme zpravidla do 24 hodin",
    },
    {
        name: "Adresa",
        value: CONTACT_INFO.address,
        href:
            "https://maps.google.com/?q=" +
            encodeURIComponent(CONTACT_INFO.address),
        icon: "M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z",
        desc: "Sídlo a fakturační adresa",
    },
];
---

<BaseLayout title="Kontakt | Služby Musil - Jan Musil" fullWidth={true}>
    <!-- Simple Header Section -->
    <section class="pt-20 pb-12 bg-amber-100 border-b border-slate-100">
        <div class="container mx-auto px-4">
            <div class="max-w-4xl">
                <span
                    class="text-amber-600 font-bold uppercase tracking-widest text-sm mb-4 block"
                    >Neváhejte se ozvat</span
                >
                <h1
                    class="text-4xl md:text-6xl font-extrabold text-slate-900 mb-6 leading-tight"
                >
                    Jsme vám
                    <span class="text-amber-500">k dispozici</span>
                </h1>
                <p class="text-xl text-slate-600 leading-relaxed max-w-3xl">
                    Potřebujete poradit se zakázkou nebo nacenit naše služby?
                    Neváhejte se nám ozvat, rádi s vámi vše probereme.
                </p>
            </div>
        </div>
    </section>

    <section class="py-20 bg-white">
        <div class="container mx-auto px-4">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                {
                    contactMethods.map((method) => (
                        <a
                            href={method.href}
                            class="p-8 bg-slate-50 rounded-2xl border border-slate-100 transition-all hover:bg-white hover:shadow-xl group"
                            target={
                                method.name === "Adresa" ? "_blank" : undefined
                            }
                        >
                            <div class="w-14 h-14 bg-amber-500 rounded-xl flex items-center justify-center text-slate-900 mb-6 group-hover:scale-110 transition-transform">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-7 w-7"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d={method.icon}
                                    />
                                </svg>
                            </div>
                            <h3 class="text-xl font-bold text-slate-900 mb-2 uppercase tracking-tight">
                                {method.name}
                            </h3>
                            <p class="text-lg font-bold text-amber-600 mb-2">
                                {method.value}
                            </p>
                            <p class="text-slate-500 text-sm">{method.desc}</p>
                        </a>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Full Width Map -->
    <Map className="h-[600px]" />

    <!-- Business Details Section -->
    <section class="py-20 bg-slate-50 border-t border-slate-100">
        <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto">
                <div class="text-center mb-12">
                    <span
                        class="text-amber-600 font-bold uppercase tracking-widest text-sm mb-2 block"
                        >Fakturační údaje</span
                    >
                    <h2
                        class="text-3xl font-extrabold text-slate-900 uppercase tracking-tight"
                    >
                        Informace o <span class="text-amber-600">firmě</span>
                    </h2>
                </div>

                <div
                    class="bg-white rounded-3xl shadow-xl p-8 md:p-12 border border-slate-100"
                >
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
                        <div class="space-y-6 text-center md:text-left">
                            <div>
                                <p
                                    class="text-slate-400 uppercase tracking-widest text-xs font-bold mb-2"
                                >
                                    Majitel a provozovatel
                                </p>
                                <p class="text-2xl font-bold text-slate-800">
                                    {CONTACT_INFO.owner}
                                </p>
                            </div>
                            <div>
                                <p
                                    class="text-slate-400 uppercase tracking-widest text-xs font-bold mb-2"
                                >
                                    Sídlo firmy
                                </p>
                                <p
                                    class="text-xl text-slate-700 leading-relaxed font-medium"
                                >
                                    {CONTACT_INFO.address}<br />
                                    Česká republika
                                </p>
                            </div>
                        </div>

                        <div class="flex flex-col justify-center space-y-8">
                            <div
                                class="grid grid-cols-2 gap-8 border-t md:border-t-0 md:border-l border-slate-100 pt-8 md:pt-0 md:pl-12"
                            >
                                <div>
                                    <p
                                        class="text-slate-400 uppercase tracking-widest text-xs font-bold mb-2"
                                    >
                                        IČO
                                    </p>
                                    <p
                                        class="text-xl font-mono font-bold text-slate-800"
                                    >
                                        72345091
                                    </p>
                                </div>
                                <div>
                                    <p
                                        class="text-slate-400 uppercase tracking-widest text-xs font-bold mb-2"
                                    >
                                        DIČ
                                    </p>
                                    <p
                                        class="text-xl font-mono font-bold text-slate-800"
                                    >
                                        CZ8305223841
                                    </p>
                                </div>
                            </div>
                            <div class="md:pl-12">
                                <p class="text-slate-500 text-sm italic">
                                    Jsme plátci DPH. Spisová značka vedená u
                                    příslušného úřadu.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Quick Contact Row -->
    <section class="py-12 bg-slate-900 overflow-hidden">
        <div class="container mx-auto px-4">
            <div
                class="flex flex-col md:flex-row items-center justify-between gap-8"
            >
                <div class="flex items-center gap-4">
                    <div
                        class="w-12 h-12 bg-amber-500 rounded-full flex items-center justify-center text-slate-900"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-6 w-6"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                            ></path>
                        </svg>
                    </div>
                    <div>
                        <p
                            class="text-slate-400 text-xs uppercase font-bold tracking-widest"
                        >
                            Příjem objednávek
                        </p>
                        <p class="text-white font-bold">
                            Po – Pá: 7:00 – 17:00
                        </p>
                    </div>
                </div>

                <a
                    href={`tel:${CONTACT_INFO.phonePlain}`}
                    class="flex items-center gap-6 group"
                >
                    <span
                        class="text-slate-400 text-lg group-hover:text-white transition-colors"
                        >Zavolejte nám přímo:</span
                    >
                    <span
                        class="text-3xl md:text-5xl font-extrabold text-amber-500 group-hover:text-amber-400 transition-colors"
                        >{CONTACT_INFO.phone}</span
                    >
                </a>
            </div>
        </div>
    </section>
</BaseLayout>
