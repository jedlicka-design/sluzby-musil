---
import BaseLayout from "../layouts/BaseLayout.astro";
import CtaSection from "../components/CtaSection.astro";
import Hero from "../components/Hero.astro";
import SpecsBox from "../components/SpecsBox.astro";
import Gallery from "../components/Gallery.astro";
import { url } from "../utils/urls";

const specs = [
    {
        label: "Typ stroje",
        value: "Komptech MAXX 518 (bubnový třídič)",
        icon: "M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z",
    },
    {
        label: "Plocha prosévání",
        value: "22,5 m²",
        icon: "M4 5a1 1 0 011-1h14a1 1 0 011 1v14a1 1 0 01-1 1H5a1 1 0 01-1-1V5z",
    },
    {
        label: "Výkon stroje",
        value: "až 120 m³/h",
        icon: "M13 10V3L4 14h7v7l9-11h-7z",
    },
    {
        label: "Průměr bubnu",
        value: "1 800 mm",
        icon: "M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z",
    },
];

const galleryImages = [
    {
        src: "/images/trideni-zeminy/1.jpeg",
        alt: "Třídění zeminy",
    },
    {
        src: "/images/trideni-zeminy/2.jpeg",
        alt: "Detail bubnového třídiče",
    },
    {
        src: "/images/trideni-zeminy/3.jpeg",
        alt: "Zpracovaný materiál",
    },
];
---

<BaseLayout
    title="Třídění zeminy a kompostu | Služby Musil - Komptech MAXX 518"
    fullWidth={true}
    transparentNav={true}
>
    <Hero
        image="/images/trideni-zeminy/hero.jpg"
        imageAlt="Bubnový třídič Komptech MAXX 518"
    >
        <Fragment slot="title">
            Třídění zeminy <br />
            <span class="text-amber-500">a kompostu</span>
        </Fragment>
        <Fragment slot="subtitle">
            Profesionální třídění biomasy, zeminy a kompostu pomocí vysoce
            výkonného bubnového třídiče Komptech MAXX 518. Dosahujeme maximální
            čistoty výsledného produktu.
        </Fragment>
        <Fragment slot="actions">
            <a
                href="#kontakt"
                class="inline-block bg-amber-500 hover:bg-amber-600 text-slate-900 font-bold py-4 px-8 rounded-lg transition-transform hover:scale-105 shadow-lg uppercase tracking-wider text-sm"
            >
                Poptat třídění
            </a>
        </Fragment>
    </Hero>

    <!-- Content Section -->
    <section class="py-16 md:py-24">
        <div class="container mx-auto px-4">
            <div
                class="flex flex-col lg:flex-row gap-16 lg:gap-24 items-center"
            >
                <div class="w-full lg:w-1/2">
                    <SpecsBox title="Parametry třídiče" specs={specs} />
                </div>
                <div class="w-full lg:w-1/2 text-slate-700">
                    <h2 class="text-3xl font-bold mb-6 text-slate-900">
                        Efektivní separace materiálů
                    </h2>
                    <p class="mb-6 leading-relaxed text-lg">
                        Pro třídění sypkých materiálů využíváme špičkovou
                        technologii v podobě bubnového třídiče
                        <strong>Komptech MAXX 518</strong>. Tento univerzální
                        stroj je ideální volbou pro střední až velké provozy,
                        kde je vyžadována spolehlivost a vysoká kvalita
                        vytříděného materiálu.
                    </p>
                    <div class="space-y-4">
                        <div class="flex items-start gap-3">
                            <div class="mt-1 text-amber-500">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-5 w-5"
                                    viewBox="0 0 20 20"
                                    fill="currentColor"
                                >
                                    <path
                                        fill-rule="evenodd"
                                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                                        clip-rule="evenodd"></path>
                                </svg>
                            </div>
                            <p>Třídění zahradní zeminy a substrátů</p>
                        </div>
                        <div class="flex items-start gap-3">
                            <div class="mt-1 text-amber-500">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-5 w-5"
                                    viewBox="0 0 20 20"
                                    fill="currentColor"
                                >
                                    <path
                                        fill-rule="evenodd"
                                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                                        clip-rule="evenodd"></path>
                                </svg>
                            </div>
                            <p>Zpracování a čištění kompostu</p>
                        </div>
                        <div class="flex items-start gap-3">
                            <div class="mt-1 text-amber-500">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-5 w-5"
                                    viewBox="0 0 20 20"
                                    fill="currentColor"
                                >
                                    <path
                                        fill-rule="evenodd"
                                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                                        clip-rule="evenodd"></path>
                                </svg>
                            </div>
                            <p>Třídění recyklátů a drceného dřeva</p>
                        </div>
                        <div class="flex items-start gap-3">
                            <div class="mt-1 text-amber-500">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-5 w-5"
                                    viewBox="0 0 20 20"
                                    fill="currentColor"
                                >
                                    <path
                                        fill-rule="evenodd"
                                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                                        clip-rule="evenodd"></path>
                                </svg>
                            </div>
                            <p>Odstranění nežádoucích příměsí a kamenů</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Video Section -->
    <section class="py-16 bg-slate-50">
        <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto text-center mb-12">
                <h2 class="text-3xl font-bold mb-4">
                    Podívejte se na stroj v akci
                </h2>
                <p class="text-slate-600">
                    Video ukázka práce bubnového třídiče Komptech MAXX 518.
                </p>
            </div>
            <div
                class="max-w-5xl mx-auto aspect-video rounded-3xl overflow-hidden shadow-2xl bg-black"
            >
                <iframe
                    width="100%"
                    height="100%"
                    src="https://www.youtube.com/embed/k_NtwyngxLg"
                    title="Komptech MAXX 518 v akci"
                    frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                    allowfullscreen></iframe>
            </div>
        </div>
    </section>

    <!-- Gallery Section -->
    <Gallery images={galleryImages} />

    <CtaSection />
</BaseLayout>
